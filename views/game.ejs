<!-- views/game.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= game.name %> - Game Site</title>
</head>
<body>
    <h1><%= game.name %></h1>
    <p>Description: <%= game.description %></p>

    <% if (game.link) { %>
        <p><a href="<%= game.link %>" target="_blank">Play <%= game.name %></a></p>
    <% } else { %>
        <h2>Guess the Number</h2>
        <form action="/games/<%= game.id %>/guess" method="POST">
            <label for="guess">Enter your guess (1-10): </label>
            <input type="number" id="guess" name="userGuess" min="1" max="10" required>
            <button type="submit">Submit Guess</button>
        </form>
    <% } %>

    <a href="/">Back to Home</a>
</body>
</html>


<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Site</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Welcome to the Game Site</h1>

    <% if (isAdBlocked) { %>
        <p style="color: red;">Please disable your ad blocker to access the full functionality of the site.</p>
    <% } %>

    <h2>Games</h2>
    <ul>
        <% games.forEach(game => { %>
            <li><a href="/games/<%= game.id %>"><%= game.name %></a></li>
        <% }); %>
    </ul>

    <h2>Search</h2>
    <form action="/search" method="GET">
        <label for="searchQuery">Search Query: </label>
        <input type="text" id="searchQuery" name="q" required>
        <label for="searchEngine">Select Search Engine: </label>
        <select id="searchEngine" name="engine">
            <option value="google">Google</option>
            <option value="bing">Bing</option>
            <!-- Add more search engines as needed -->
        </select>
        <button type="submit">Search</button>
    </form>
</body>
</html>

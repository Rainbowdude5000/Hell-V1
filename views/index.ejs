<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Site</title>
</head>
<body>
    <h1>Welcome to the Game Site</h1>
    
    <h2>Games</h2>
    <ul>
        <% games.forEach(game => { %>
            <li><a href="/games/<%= game.id %>"><%= game.name %></a></li>
        <% }); %>
    </ul>
</body>
</html>

<!-- views/search.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
</head>
<body>
    <h1>Search Results</h1>

    <% if (results) { %>
        <iframe src="<%= results %>" width="100%" height="600" frameborder="0" marginheight="0" marginwidth="0">Loading...</iframe>
    <% } else { %>
        <p>No search results. Enter a query in the search bar.</p>
    <% } %>

    <a href="/">Back to Home</a>
</body>
</html>

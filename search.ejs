<!-- views/search.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - Game Site</title>
</head>
<body>
    <h1>Search Results</h1>
    
    <% if (results.length === 0) { %>
        <p>No results found for '<%= query %>'</p>
    <% } else { %>
        <ul>
            <% results.forEach(result => { %>
                <li><a href="/games/<%= result.id %>"><%= result.name %></a></li>
            <% }); %>
        </ul>
    <% } %>

    <a href="/">Back to Home</a>
</body>
</html>
